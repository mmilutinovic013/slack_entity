/**
 * Callback to build an activation code
 */
function slack_entity_create($values = array()) {
  // include uuid functions
  module_load_include('inc', 'uuid', 'uuid');
  $code = (object) array(
    'code' => uuid_generate(),
    'type' => 'slack_entity',
  );
  // Apply the given values.
  foreach ($values as $key => $value) {
    $code->$key = $value;
  }
  return $code;
}